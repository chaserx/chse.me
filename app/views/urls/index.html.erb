<h1 class="headline">Listing URLs</h1> ( <%= link_to 'new url', new_url_path %> ) ( <a class="bookmarklet" href="javascript:location.href='http://localhost:3000/urls/new?link='+encodeURIComponent(location.href)+'&
title='+encodeURIComponent(document.title)">shorten link bookmarklet</a> )

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Shortened</th>
    <th>Link</th>
    <th>Actions</th>
  </tr>

<% @urls.each do |url| %>
  <tr>
    <td><%= link_to "http://chse.me/#{url.shortened}", "#{request.scheme}://#{request.host_with_port}/#{url.shortened}" %><br /><small>clicks: <%= url.clicks %></small></td>
    <td><%= link_to url.link, url.link %></td>
    <td><%= link_to edit_url_path(url), :class => "btn btn-mini" do %><i class="icon-pencil"></i> Edit<%end%>
                <%= link_to url, confirm: 'Are you sure?', method: :delete, :class => "btn btn-danger btn-mini"  do %><i class="icon-trash icon-white"></i> Destroy<%end%></td>
  </tr>
<% end %>
</table>

