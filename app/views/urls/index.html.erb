<h1>Listing URLs</h1>

<table class="table table-striped table-bordered table-condensed">
  <tr>
    <th>Shortened</th>
    <th>Link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @urls.each do |url| %>
  <tr>
    <td><%= url.shortened %></td>
    <td><%= url.link %></td>
    <td><%= link_to 'Show', url %></td>
    <td><%= link_to 'Edit', edit_url_path(url) %></td>
    <td><%= link_to 'Destroy', url, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

