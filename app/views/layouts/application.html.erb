    <div class="navbar navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="/">chse.me</a>
          <div class="nav-collapse">
            <ul class="nav">
              <% if user_signed_in? %>
                <%= nav_link "Howdy, #{current_user.email}", edit_user_registration_path %>
                <%= nav_link 'Shortened URLs', urls_path %>  
                <% if user_signed_in? && current_user.admin? %>
                  <li class="dropdown">
                  <a href="#"
                        class="dropdown-toggle"
                        data-toggle="dropdown">
                        Advanced
                        <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <li>Advanced Setting 1</li>
                    <li>Advanced Setting 2</li>
                  </ul>
                </li>
                <% end %>
                <li>
                <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
                </li>
              <% else %>
                <li>
                <%= link_to('Login', new_user_session_path)  %>  
                </li>
                <li>
                  <%= link_to('Sign up', new_user_registration_path)  %>  
                </li>
              <% end %>
              <!-- <li class="active"><a href="#">Home</a></li>
              <li><a href="#about">About</a></li>
              <li><a href="#contact">Contact</a></li> -->
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">

      <!-- Main hero unit for a primary marketing message or call to action -->
      <div class="row">
      	<div class="span12">
      		<%= yield %>
      	</div>
      </div>
      
      <hr>

      <footer>
        <p>&copy; Chase Southard 2012<br />
        <%= link_to "privacy", content_privacy_path %> | <%= link_to "terms", content_terms_path %> | <%= link_to "about", content_about_path %></p>
      </footer>

    </div> <!-- /container -->

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
